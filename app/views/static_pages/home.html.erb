<% if logged_in? %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<%= render 'shared/user_info' %>
		</section>
		<section class="stats">
			<%= render 'shared/stats' %>
		</section>
		<section class="post_form">
			<%= render 'shared/post_form' %>
		</section>
	</aside>
	<div class="col-md-8">
		<h3>Local Feeds</h3>
		<%= render 'shared/feed' %>
	</div>
</div>
<% else %>
<div class="homebackground" style="background-image:URL('assets/images/background.png')"></div>
<div class="center jumbotron">
	<h1>Welcome to GalaXyclopedia</h1>

	<h2>
		This is the home for SolarSystem blogging and image sharing.
	</h2>

	<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
	<%= link_to "Or Straight To the Docs!", about_path, class: "btn btn-lg btn-primary" %>

</div>
<script type="text/javascript">
	$('.navbar-inverse').css('background-color', 'rgba(12, 14, 18, 0)')
</script>

<% end %>
