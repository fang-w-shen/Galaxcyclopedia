<% if @feed_items.any? %>

<!-- BEGIN MASONRY -->

<div class="col-lg-12 col-md-12" style="position:fixed;z-index:-2;left:-12px;margin:0;padding:0;width:101vw;">
	<% @feed_items.each do |item| %>

	<div class="post-box col-lg-3 col-md-3 col-sm-3" style="margin-top: -15px">
		<a href="/users/<%= item.user.id %>"><img class="imgs" src="<%= item.picture %>" alt="<%= item.content %>"/></a>
		<div class='hoverablething' style="height: 40%;vertical-align: middle;top: 60%;padding-left: 2px;"><%= User.find(item.user_id)[:name] %><hr><%= item.content %></div>
	</div>
	<% end %>

	<div style="z-index:99;position:fixed;bottom:0;right:0">
	<%= will_paginate @feed_items, id: 'paginatefeeditems' %>
	</div>
</div>
<!-- END MASONRY -->

<% end %>

<% if @feed_items.blank? %>
<% if params[:search].nil? %>

<h4>There are no posts by the author(s) <%= params[:searchauthor] %>.</h4>
<% else %>

<h4>There are no posts by the tag(s) <%= params[:search] %>.</h4>
<% end %>

<% end %>